@model PoorMansCQRS.ReadModel.TaskDetails

<h2>Details</h2>

<fieldset>
    <legend>TaskDetails</legend>
    <div class="toolbar">
        <div>
        @using (Html.BeginForm("Close", "Task"))
        {
            @Html.HiddenFor(model => model.ProjectId)
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Close Task" />
        }
        </div>
        <div>
        @using (Html.BeginForm("Deactivate", "Task"))
        {
            @Html.HiddenFor(model => model.ProjectId)
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Deactivate Task" />
        }
        </div>
    </div>
    <div class="display-label">ProjectId</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectId)
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label">Status</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Status)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Back to Project", "Details", "Project", new { id = Model.ProjectId }, null)
</p>
